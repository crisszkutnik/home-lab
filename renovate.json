{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":rebaseStalePrs",
    ":automergePatch"
  ],
  "timezone": "America/Argentina/Buenos_Aires",
  "flux": {
    "fileMatch": [
      "clusters/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "clusters/.+\\.yaml$"
    ],
    "ignorePaths": [
      "clusters/base",
      "clusters/repositories",
      "clusters/.+/release\\.yaml$",
      "clusters/.+/kustomization\\.yaml$"
    ]
  }
}